{% extends 'base.html.twig' %}

{% block title %}
Acheter {{ slug }}
{% endblock %}

{% block stylesheet %}
<style>
	.tag_title {
		font-weight: bold;
	}

	.picto {
		display: inline-block;
		width: 20px;
		text-align: center;
	}

	.picto i {
		color: #E14826;
		font-size: 12px;
	}
</style>
{% endblock %}

{% block body %}
<!-- GAME INFORMATIONS -->
<section class="container">
	<div class="row">
		<div class="col-sm-6">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title font-weight-bold">{{ name }}</h3>
					<p class="card-text">{{ description }}</p>
				</div>
			</div>
		</div>
		<div class="card">
			<div class="card-header">
				<h3 class="text-uppercase">À propos</h3>
			</div>
			<div class="card-body text-left">
				<div>
					<span class="picto">
						<i class="fas fa-tags"></i>
					</span>
					<span class="tag_title">
						Genres :
					</span>
					<span>
						{% for tag in tags %}
						{{ tag }},
						{% endfor %}
					</span>
				</div>
				<div>
					<span class="picto">
						<i class="fas fa-tv picto"></i>
					</span>
					<span class="tag_title">
						Plateformes :
					</span>
					<span>
						{% for platform in platforms %}
						{{ platform }},
						{% endfor %}
					</span>
				</div>
				<div>
					<span class="picto">
						<i class="fas fa-ban"></i>
					</span>
					<span class="tag_title">
						Pegi :
					</span>
					<span>
						{{ pegi }} ans
					</span>
				</div>
				<div>
					<span class="picto">
						<i class="fas fa-euro-sign"></i>
					</span>
					<span class="tag_title">
						Prix :
					</span>
					<span>
						{{ price }} €
					</span>
				</div>
			</div>
		</div>
	</div>
</section>

