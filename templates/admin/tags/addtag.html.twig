{% extends 'admin.html.twig' %}

{% block title %}
	Ajouter un tag
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-md-7 col-lg-12 mx-auto">
				<div class="card card-signin my-5">
					<div class="card-body">
						<h5 class="card-title text-center">Ajouter un Tag</h5>
						{{ form_start(tagForm) }}
						<div class="form-label-group">
							{{ form_widget(tagForm.name, 
                                { 'attr' : 
                                    {
                                        'placeholder' : 'Nom du tag',
                                        'class' : 'form-control',
                                        'id' : 'tags_form_name',
                                        }
                                    }
                                )
                            }}
							{{ form_errors(tagForm.name) }}
							<label for="tags_form_name">Nom du tag</label>
						</div>
						<div class="form-group text-center">
							<div class="col-xs-12">
								<br>
								<button class="btn btn-lg btn-primary register" type="submit">
									<i class="glyphicon glyphicon-ok-sign"></i>Ajouter le tag</button>
							</div>
                            <a href="{{ path('admin_plateforms_tags') }}">
                                <p class="mt-4">Retour Ã  la liste des tags & plateformes.</p>
                            </a>
						</div>
						{{ form_end(tagForm) }}
					</div>
				</div>


			</div>
		</div>
	</div>
</div></div>{% endblock %}
