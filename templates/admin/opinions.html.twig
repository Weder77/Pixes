{% extends 'admin.html.twig' %}

{% block title %}
	Gestions des commentaires
{% endblock %}

{% block content %}
	<h4 class="mt-5 mb-3">Liste des commentaires :</h4>
	<div class="table-responsive">
		<table class="table text-center table-striped table-sm">
			<thead>
				<tr>
					<th>#</th>
					<th>Nom</th>
					<th>Date</th>
					<th>Note</th>
					<th>Avis</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for opinion in opinions %}
					<tr>
						<td>{{ opinion.id }}</td>
						<td>{{ opinion.user.firstname }} {{ opinion.user.lastname }}</td>
						<td>{{ opinion.postedOn | date("m/d/Y") }}</td>
						<td>{{ opinion.note }}</td>
						<td>{{ opinion.content | slice(0,100) }}...</td>
						<td>
							<button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#delete{{ opinion.id }}">
								<i class="fas fa-trash "></i>
							</button>
							<!-- Modal -->
							<div class="modal fade" id="delete{{ opinion.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
								<div class="modal-dialog" role="document">
									<div class="modal-content">
										<div class="modal-header">
											<h5 class="modal-title" id="delete{{ opinion.id }}">Attention</h5>
											<button type="button" class="close" data-dismiss="modal" aria-label="Close">
												<span aria-hidden="true">&times;</span>
											</button>
										</div>
										<div class="modal-body">
											Voulez vous vraiment supprimer le commentaire num√©ro
											{{ opinion.id}}
											?
										</div>
										<div class="modal-footer">
											<button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
											<a href="{{ path('admin_delete_opinion', { id : opinion.id }) }}">
												<button type="button" class="btn btn-danger">Supprimer</button>
											</a>
										</div>
									</div>
								</div>
							</div>
						</td>

					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
