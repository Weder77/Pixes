{% extends 'admin.html.twig' %}

{% block title %}
	Jeux
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-md-7 col-lg-12 mx-auto">
				<div class="card card-signin my-5">
					<div class="card-body">
						<h5 class="card-title text-center">Ajouter un jeu</h5>
						{{ form_start(gameForm) }}

						<div class="form-label-group">
							{{ form_widget(gameForm.name, 
                                { 'attr' : 
                                    {
                                        'placeholder' : 'Nom du jeu',
                                        'class' : 'form-control',
                                        'id' : 'add_game_name',
                                        }
                                    }
                                )
                            }}
							{{ form_errors(gameForm.name) }}
							<label for="add_game_name">Nom du jeu</label>
						</div>

						<div class="form-label-group">
							{{ form_widget(gameForm.price, 
                                { 'attr' : 
                                    {
                                        'placeholder' : 'Prix en €',
                                        'class' : 'form-control',
                                        'id' : 'add_game_price',
                                        'type' : 'number',
                                        
                                        }
                                    }
                                )
                            }}
							{{ form_errors(gameForm.price) }}
							<label for="add_game_price">Prix en €</label>
						</div>

						<div class="form-label-group">
							{{ form_widget(gameForm.pegi, 
                                { 'attr' : 
                                    {
                                        'placeholder' : 'Limitation d\'âge',
                                        'class' : 'form-control',
                                        'id' : 'add_game_pegi',
                                        'type' : 'number',
                                        }
                                    }
                                )
                            }}
							{{ form_errors(gameForm.pegi) }}
							<label for="add_game_pegi">Limitation d'âge</label>
						</div>

						<div class="form-label-group">
							{{ form_widget(gameForm.description, 
                                { 'attr' : 
                                    {
                                        'placeholder' : 'Description',
                                        'class' : 'form-control',
                                        'id' : 'add_game_description',
                                        }
                                    }
                                )
                            }}
							{{ form_errors(gameForm.description) }}
						</div>

						<div class="form-label-group">
							<p>Sélectionner les plateformes sur lesquels le jeu est disponible :
							</p>
							<div class="table">
								{{ form_widget(gameForm.platforms, { 'attr' : {
                                'class' : 'table'
                                }})}}
								{{ form_errors(gameForm.platforms) }}
							</div>
						</div>

						<div class="form-label-group">
							<p>Sélectionner les tags sur lesquels le jeu peut être référencer :
							</p>
							<div class="table">
								{{ form_widget(gameForm.tags, { 'attr' : {
                                'class' : 'table'
                                }})}}
								{{ form_errors(gameForm.tags) }}
							</div>
						</div>


						<div class="form-label-group">
							{{ form_widget(gameForm.file, { 'attr' : {
                                    'placeholder' : 'Ajouter la cover du jeu',
                                    'class' : 'form-control'
                                    }})
																					                                }}
						</div>

						<div class="form-group text-center">
							<div class="col-xs-12">
								<br>
								<button class="btn btn-lg btn-primary register" type="submit">
									<i class="glyphicon glyphicon-ok-sign"></i>Ajouter le jeu</button>
							</div>
						</div>


						{{ form_end(gameForm) }}


						{{ form_start(gameCode) }}

						<div class="form-label-group">
							{{ form_widget(gameCode.code, 
                                { 'attr' : 
                                    {
                                        'placeholder' : 'Code',
                                        'class' : 'form-control',
                                        'id' : 'codes_form_code',
                                        }
                                    }
                                )
                            }}
							{{ form_errors(gameCode.code) }}
							<label for="codes_form_code">Code</label>
						</div>

						<div class="form-label-group">
							<p>Sélectionner les jeux sur lesquels générer les codes :</p>
							<div class="table">
								{{ form_widget(gameCode.game, { 'attr' : {
                                'class' : 'table'
                                }})}}
								{{ form_errors(gameCode.game) }}
							</div>
						</div>

						<div class="form-group text-center">
							<div class="col-xs-12">
								<br>
								<button class="btn btn-lg btn-primary register" type="submit">
									<i class="glyphicon glyphicon-ok-sign"></i>Générer les codes</button>
							</div>
						</div>

                        	{{ form_end(gameCode) }}

					</div>
					{{ form_end(gameForm) }}
				</div>


			</div>
		</div>
	</div>
</div></div>{% endblock %}
