                <li class="active text-center">
                    <a class="tab-name" data-toggle="tab" href="#profile">Mon profil</a>
                </li>
                <li class="text-center">
                    <a class="tab-name" data-toggle="tab" href="#purchased">Mes jeux</a>
                </li>
                <li class="text-center">
                    <a class="tab-name" data-toggle="tab" href="#comments">Mes avis</a>
                </li>
