{% extends 'base.html.twig' %}

{% block title %}
Mon compte
{% endblock %}

{% block stylesheet %}{% endblock %}

{% block body %}

<div class="container bootstrap snippet">

    <div class="row">
        <div class="col-sm-3">

            <div class="text-center">
                {% if picture != null %}
                    <img src="{{ picture }}" class="avatar img-circle img-thumbnail mb-4" alt="avatar">
                {% else %}
                    <img src="{{ asset('img/default.png') }}" class="avatar img-circle img-thumbnail mb-4" alt="avatar default">
                {% endif %}
                <!-- <img src="{{ picture }}" class="avatar img-circle img-thumbnail mb-4" alt="avatar"> -->
                <p>{{firstname}} {{lastname}}</p>
            </div>

            <ul class="list-group text-center">
                <li class="list-group-item text-muted">Activité
                    <i class="fa fa-dashboard fa-1x"></i>
                </li>
                <li class="list-group-item text-center">
                    <span class="pull-left">
                        <strong>Mon solde</strong>
                    </span>
                    {{ balance }}
                    €
                </li>
                <li class="list-group-item text-center">
                    <span class="pull-left">
                        <strong>Jeux acheté</strong>
                    </span>
                    {{ gamesNumber }}
                </li>
                <li class="list-group-item text-center">
                    <span class="pull-left">
                        <strong>Avis posté</strong>
                    </span>
                    {{ opinionsNumber }}
                </li>
            </ul>
        </div>

        <div class="col-sm-9">

            <ul class="nav nav-tabs">
                <li class="active text-center">
                    <a class="tab-name" data-toggle="tab" href="#profile">Mon profil</a>
                </li>
                <li class="text-center">
                    <a class="tab-name" data-toggle="tab" href="#purchased">Mes jeux ({{ gamesNumber }})</a>
                </li>
                <li class="text-center">
                    <a class="tab-name" data-toggle="tab" href="#comments">Mes avis ({{ opinionsNumber }})</a>
                </li>
            </ul>


            <div class="tab-content">
                {# profile #}
                <div class="tab-pane active" id="profile">
                    <div class="text-center mt-4">
                        <h3>Mes informations publiques</h3>
                        <div class="container mt-4">
                            {{ form_start(ProfileForm) }}

                            <!-- {# picture #}
                            <small>NE FONCTIONNE PAS, ON VERRA PLUS TARD</small>
                            <div class="form-label-group">
                                {{ form_widget(ProfileForm.picture, { 'attr' : {
                                    'placeholder' : 'Changer votre photo de profil',
                                    'class' : 'form-control'
                                    }})
                                }}
                            </div> -->
                            <div class="form-label-group">
                                {{ form_widget(ProfileForm.firstname, 
                                    { 'attr' : 
                                        {
                                            'class' : 'form-control text-center',
                                            }
                                        }
                                    )
                                }}
                                {{ form_errors(ProfileForm.firstname) }}
                                <label for="register_form_email">Prénom</label>
                            </div>

                            <div class="form-label-group">
                                {{ form_widget(ProfileForm.lastname, 
                                    { 'attr' : 
                                        {
                                            'class' : 'form-control text-center',
                                            }
                                        }
                                    )
                                }}
                                {{ form_errors(ProfileForm.lastname) }}
                                <label for="register_form_email">Nom</label>
                            </div>

                            <!-- A enlever quand on aura la partie admin -->
                            <div class="form-label-group">
                                {{ form_widget(ProfileForm.balance, 
                                    { 'attr' : 
                                        {
                                            'class' : 'form-control text-center',
                                            'type' : 'number'
                                            }
                                        }
                                    )
                                }}
                                {{ form_errors(ProfileForm.balance) }}
                                <label for="register_form_email">Simuler mon solde</label>
                            </div>

                            <label>Date de naissance</label>
                            <div class="form-label-group row justify-content-center">
                                {{ form_widget(ProfileForm.birthday, 
                                    { 'attr' : 
                                        {
                                            'class' : 'text-center',
                                            }
                                        }
                                    )
                                }}
                                {{ form_errors(ProfileForm.birthday) }}
                            </div>

                            <div class="form-group">
                                <div class="col-xs-12">
                                    <br>
                                    <button class="btn btn-lg btn-primary register" type="submit">
                                        <i class="glyphicon glyphicon-ok-sign"></i>
                                        Sauvegarder mes informations publiques</button>
                                </div>
                            </div>
                            {{ form_end(ProfileForm) }}
                        </div>
                        <hr>
                        <div class="text-center mt-4">
                            <h3>Mes informations privées</h3>
                            <div class="container mt-4">
                                {{ form_start(UserForm) }}

                                <div class="form-label-group">
                                    {{ form_widget(UserForm.email, 
                                    { 'attr' : 
                                        {
                                            'placeholder' : 'Adresse Email',
                                            'class' : 'form-control text-center',
                                            'id' : 'register_form_email',
                                            'type' : 'email',
                                            }
                                        }
                                    )
                                }}
                                    {{ form_errors(UserForm.email) }}
                                    <label for="register_form_email">Adresse Email</label>
                                </div>
                                <small>Il faut confirmer votre mot de passe si vous souhaitez changer votre adresse
                                    email. Pour changer votre mot de passe il suffit juste d'entrer le nouveau, et de le
                                    confirmer.</small>

                                <div class="form-label-group">
                                    {{ form_widget(UserForm.password.first, 
                                    { 'attr' : 
                                        {
                                            'placeholder' : 'Mot de passe',
                                            'class' : 'form-control text-center',
                                            'id' : 'register_form_password_first',
                                            'type' : 'password',
                                            }
                                        }
                                    )
                                }}
                                    {{ form_errors(UserForm.email) }}
                                    <label for="register_form_password_first">Mot de passe</label>
                                    {% if(form_errors(UserForm.password.first)) %}
                                    {{ form_errors(UserForm.password.first) }}
                                    {% endif %}
                                </div>

                                <div class="form-label-group">
                                    {{ form_widget(UserForm.password.second, 
                                    { 'attr' : 
                                        {
                                            'placeholder' : 'Confirmaton du mot de passe',
                                            'class' : 'form-control text-center',
                                            'id' : 'register_form_password_second',
                                            'type' : 'password',
                                            }
                                        }
                                    )
                                }}
                                    {{ form_errors(UserForm.email) }}
                                    <label for="register_form_password_second">Confirmaton du mot de passe</label>
                                    {% if(form_errors(UserForm.password.second)) %}
                                    {{ form_errors(UserForm.password.second) }}
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12">
                                        <br>
                                        <button class="btn btn-lg btn-primary register" type="submit">
                                            <i class="glyphicon glyphicon-ok-sign"></i>
                                            Sauvegarder mes informations privées</button>
                                    </div>
                                </div>
                                {{ form_end(UserForm) }}
                            </div>
                        </div>
                    </div>
                </div>


                {# purchased games #}
                <div class="tab-pane" id="purchased">
                    <div class="text-center mt-4">
                        <h3>Mes jeux achetés</h3>
                        <div class="container mt-4 d-flex flex-column-reverse align-items-center margin-zero">
                        {# {% for codes in code %} #}
                            {% for game in games %}
                            <div class="card mb-3" style="max-width: 540px;">
                                <div class="row no-gutters">
                                    <div class="col-md-4">
                                        <a target="_blank" href="{{ path('game', { slug : game.slug }) }}">
                                            <img src="{{game.imgUrl}}" class="card-img" alt="...">
                                        </a>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <a target="_blank" href="{{ path('game', { slug : game.slug }) }}"><h5 class="card-title">{{ game.name}}</h5></a>
                                            <p class="card-text">{{game.price}} €</p>
                                            <p class="card-text">Code d'activation<br>
                                                {# {{ code }} #}
                                            </p>
                                            <p class="card-text">
                                                <small class="text-muted">Acheté le
                                                    
                                                </small>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        {# {% endfor %} #}
                        </div>
                    </div>
                </div>


                {# comments #}
                <div class="tab-pane" id="comments">
                    <div class="text-center mt-4">
                        <h3 class="mt-4 mb-4">Mes commentaires</h3>
                        <div class="d-flex flex-column-reverse">
                            {% for opinion in opinions %}
                            <div class="mb-4 comment_infos">
                                <span
                                    class="text-uppercase font-weight-bold text-primary mr-4">{{ opinion.user.firstname }}
                                    {{ opinion.user.lastname }}</span>
                                <span>
                                    {% for x in 1..5 %}
                                    {% if x <= opinion.note %}
                                    <i class="fas fa-star"></i>
                                    {% else %}
                                    <i class="far fa-star"></i>
                                    {% endif %}
                                    {% endfor %}
                                </span>
                                <div>
                                    {{ opinion.content }}
                                </div>
                                <div class="">
                                    <span class="mr-4">
                                        <i class="mr-2 far fa-clock"></i>
                                        <span class="text-muted">
                                            {{ opinion.postedon | date('d/m/Y H:i') }}
                                        </span>
                                    </span>
                                </div>
                            </div>
                            <hr>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}